<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/a2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="10000dp"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avt"
                android:scaleType="fitXY"
                />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingTop="25dp"
                android:paddingLeft="35dp">
                <TextView

                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:text="User name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:background="#00000000"
                    android:inputType="textNoSuggestions"
                    android:layout_below="@+id/tv1"
                    android:textSize="20dp"

                    android:text="Nguyễn Văn A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/mauchudennhat"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln4"
                android:layout_below="@+id/ln3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingTop="16dp"
                android:paddingLeft="35dp">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:background="#00000000"
                    android:inputType="textNoSuggestions"
                    android:layout_below="@+id/tv3"
                    android:textSize="20dp"

                    android:text="duongtantaibmt@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/mauchudennhat"/>

            </LinearLayout>


        <LinearLayout
            android:id="@+id/ln3"
            android:layout_below="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="16dp"
            android:paddingLeft="35dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:layout_below="@+id/tv5"
                android:textSize="20dp"

                android:text="08346722047"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/mauchudennhat"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln5"
            android:layout_below="@id/ln4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="16dp"
            android:paddingLeft="35dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textSize="20dp"

                android:text="135 Nguyễn Xí, Bình Thạnh, Sài Gòn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/mauchudennhat"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln2"
            android:layout_below="@id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="16dp"
            android:paddingLeft="35dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:background="#00000000"
                android:inputType="textNoSuggestions"
                android:textSize="20dp"

                android:text="26/05/2002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/mauchudennhat"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln6"
            android:layout_below="@id/ln5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="35dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="SAVE"
                    android:textSize="18dp"
                    android:background="#1B6E62"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="30dp">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="CANCEL"
                    android:textSize="18dp"
                    android:background="#1B6E62"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>